footer.footer
  .footer__row
    .footer__col
      nav.footer__nav
        ul.footer__list
          each item in footerMenu
            li.footer__item
              a(href=item[1]).footer__link #{item[0]}
    .footer__col.footer__col--justify--end
      ul.socials__list
        each item in socials
          li.socials__item--footer
            a(href=item[1]).socials__link--footer
              +icon(item[0], 'socials__icon--footer')
  .footer__row
    .footer__col
