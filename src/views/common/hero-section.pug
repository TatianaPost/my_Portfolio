mixin hero-section(name, desc, iconBg, modName, arrow)
  -
    var socials = [
      ['vk', 'http://vk.com/egorovfam'],
      ['github', 'http://github.com/egorov-by-egorov'],
      ['in', 'http://in.com']
    ]
  section.hero
    include ./header
    .hero__title
      +icon((`${iconBg}`), 'hero__title-pic')
      .hero__user
        .hero__avatar
          //- img(src="./assets/images/img/avatar/avatar1.png", alt="Avatar").user__pic-img
        .hero__description
          h1(class=`${modName}`).hero__name=(`${name}`)
          .hero__info=(`${desc}`)
    a(class=`${arrow}`, href="#").down-arrow.hero__down-arrow
      +icon('arrow_down', "down-arrow__img")