extends ../main.layout.pug

block variables
  - var title = 'Welcome'
  -
    var socials = [
      ['vk', 'http://vk.com/egorovfam'],
      ['github', 'http://github.com/egorov-by-egorov'],
      ['in', 'http://in.com']
    ]
  script(src='about.bundle.js')

block content
  .left__color__side
  .right__color__side

  section.hero
    .block__socials
      ul.socials
        each item in socials
          li.social__item
            a(href="#").social__link
              +icon(item, 'socials__link-icon')
    a(href="#").humburger-link.hero__menu
      +icon('hamburger', "humburger-img")
    .hero__title
      +icon('portfolio_header', 'section-title__pic')
      .user.hero__user
        .user__pic
          //- img(src="./assets/images/img/avatar/avatar1.png", alt="Avatar").user__pic-img
        .user__description
          .user__name Егоров Дмитрий
          .user__info Личный сайт разработчика
    a(href="#").down-arrow.hero__down-arrow
      +icon('arrow_down', "down-arrow__img")
  section.about
    .about__left
      .about__left-title
        +icon('about_header', 'about-title')
        .block-title Обо мне
      .about__left-content
        .user-description
          .user-description__image
            img(src="./assets/images/img/avatar/avatar1.png", alt="Avatar").user-description__avatar
          .user-description__data
            .user-description__title
              .block-subtitle.block-subtitle__me Кто я
            .user-description__text
              .text-content
                p Я веб разработчик из Москвы. Мне 27 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты. Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,как тут всё классно и красиво!
    .about__right
      .about__right-title
        .block-subtitle Чем я могу быть вам полезен
      .about__right-description.text-content
        p Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
      .about__right-content
        -
          var skills = [
            ['Frontend', [['HTML5', 90], ['CSS3', 65], ['javascript', 70]]],
            ['Backend', [['PHP', 30], ['mySQL', 40], ['Node.js', 50]]],
            ['Workflow', [['Git', 90], ['Gulp', 85], ['Webpack', 80]]]
          ]
        ul.skill-list
          each skillsrow in skills
            li.skill-list__item.skills-row
              .skills-row__title #{skillsrow[0]}
              ul.skill-row__list
                each skill in skillsrow[1]
                  li.skill-row__item
                    figure.skill
                      svg(viewbox='0 0 100 100' preserveAspectRatio='none').skill__figure
                        circle(cx='50' cy='50' r='40').skill__circle.skill__circle_inder
                        circle(cx='50' cy='50' r='40').skill__circle.skill__circle_above
                    .skill__title #{skill[0]}
  section.map
    .google-map
    .map__data
      .contacts
        h2.contacts__title
          .block-subtitle.block-subtitle__contacts Контакты
        address.contacts__data
          ul.contact__list
            - 
              var contacts = [
                ['skype', 'egorovbyegorov', 'skype:egorovbyegorov'],
                ['phone', '+7(916)793-94-43', 'tel:+79167939443'],
                ['envelope', 'egorov-web-studio@mail.ru', 'mailto:egorov-by-egorov@mail.ru'],
                ['map_marker', 'Москва, Зоологическая улица 26', 'https://www.google.ru/maps/place/%D0%97%D0%BE%D0%BE%D0%BB%D0%BE%D0%B3%D0%B8%D1%87%D0%B5%D1%81%D0%BA%D0%B0%D1%8F+%D1%83%D0%BB.,+26,+%D0%9C%D0%BE%D1%81%D0%BA%D0%B2%D0%B0,+123056/@55.7655839,37.5819408,17z/data=!3m1!4b1!4m5!3m4!1s0x46b54a3093758425:0x683679f2b1750745!8m2!3d55.7655839!4d37.5841295'],
              ]
            each item in contacts
              li.contacts__item.contacts-row
                .contacts__icon
                  +icon(item[0], 'contacts__icon-pic')
                a.contacts__title(href=item[2]) #{item[1]}