extends ../auth.layout.pug
block content
  section.hero_welcome
      button.auth__btn Авторизоваться
      .hero__bg-block
        .user-welcome__pic
        .user__description-welcome
          .user__name Егоров Дмитрий
          .user__info Личный сайт разработчика
        -
          var socials = [
            ['vk', 'http://vk.com/egorovfam'],
            ['github', 'http://github.com/egorov-by-egorov'],
            ['in', 'http://in.com']
          ]
        ul.socials__list
          each item in socials
            li.socials__item-welcome
              a(href=`${item[1]}`).socials__link
                +icon(item[0], 'socials__link-icon__welcome')
      .link__buttons
        a(href="works.html").link__button Мои работы
        a(href="about.html").link__button Обо мне
        a(href="blog.html").link__button Блог

      .copyright-welcome
        small © Егоров Дмитрий | создано с любовью в LoftSchool | 2018
