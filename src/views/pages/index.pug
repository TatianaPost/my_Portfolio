extends ../auth.layout.pug
block content
  section.auth
    button.auth__btn(type='button') Авторизоваться
    .auth__container
      .auth__user-card
        .front
          .auth__avatar
          .auth__desc
            .auth__name Егоров Дмитрий
            .auth__info Личный сайт разработчика
          -
            var socials = [
              ['vk', 'http://vk.com/egorovfam'],
              ['github', 'http://github.com/egorov-by-egorov'],
              ['in', 'http://in.com']
            ]
          ul.socials__list
            each item in socials
              li.auth__socials-item
                a(href=`${item[1]}` target="blank").socials__link
                  +icon(item[0], 'auth__socials-icon')
          nav.auth__buttons
            ul.auth__list
              li.auth__item
                a(href="works.html").auth__link Мои работы
              li.auth__item
                a(href="about.html").auth__link Обо мне
              li.auth__item
                a(href="blog.html").auth__link Блог
        .back
          .block-subtitle.title-auth Авторизуйтесь
          .form__auth
            label.form__auth-login
              .form__auth-input_pic
                +icon('login', 'form__auth-icon')
              input.form__auth-input(type="text", placeholder='Логин') 
            label.form__auth-pass
              .form__auth-input_pic
                +icon('password', 'form__auth-icon')
              input.form__auth-input(type="password", placeholder='Пароль')
            label.form__auth-check
              input.form__auth-checkbox(type="checkbox", name="human")
              .form__auth-checkbox--style
              span.form__auth-checkbox_text Я человек
            .form__auth-radio
              .auth-radio__question Вы точно не робот?
              .auth-radio-btns
                label.auth-radio__btn
                  input(type="radio", name="radio_btn").auth-radio__input
                  .auth-radio__input--style
                  p Да
                label.auth-radio__btn
                  input(type="radio", name="radio_btn").auth-radio__input
                  .auth-radio__input--style 
                  p Не уверен
          .link__buttons
            a(href="").link__button.link__button-back На главную
            a(href="#").link__button Войти
          
    footer.copyright-welcome
      small © Егоров Дмитрий | создано с любовью в LoftSchool | 2018
